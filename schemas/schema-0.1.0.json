{
  "title": "ProvisionRequest",
  "allOf": [
    { "$ref": "base-schema.json" },
    {
      "type": "object",
      "properties": {
        "values": {
          "type": "object",
          "required": ["orgName", "splunk"],
          "properties": {
            "orgName": {
              "type": "string",
              "description": "Your organization name",
              "example": "hagnash-bla"
            },
            "splunk": {
              "type": "object",
              "required": ["url"],
              "properties": {
                "url": {
                  "type": "string",
                  "pattern": "^https?://.*",
                  "description": "Splunk URL (must start with http:// or https://)",
                  "example": "https://splunk.local:8080"
                }
              },
            "secrets": {
              "type": "object",
              "description": "Sensitive values such as tokens, passwords or API keys",
              "properties": {
                "splunkToken": {
                  "type": "string",
                  "description": "Splunk authentication token",
                  "example": "abcdef1234567890"
                },
                "dbPassword": {
                  "type": "string",
                  "description": "Database password",
                  "example": "P@ssw0rd!"
                },
                "additionalProperties": false
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      }
    }
  ],
  "additionalProperties": false,
}
