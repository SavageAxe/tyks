{
  "title": "ProvisionRequest",
  "allOf": [
    { "$ref": "base-schema.json" },
    {
      "type": "object",
      "required": ["orgName", "splunk"],
      "properties": {
        "values": {
          "type": "object",
          "properties": {
            "orgName": {
              "type": "string",
              "description": "Organization name",
              "example": "hagnash"
            },
            "splunk": {
              "type": "object",
              "required": ["url"],
              "properties": {
                "url": {
                  "type": "string",
                  "pattern": "^https?://.*",
                  "description": "Splunk URL (must start with http:// or https://)",
                  "example": "https://splunk.local:8080"
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      }
    }
  ]
}
