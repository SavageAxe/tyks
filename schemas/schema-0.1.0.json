{
  "$id": "schema-0.1.0.json",
  "title": "ProvisionRequest",
  "allOf": [
    { "$ref": "base-schema.json" },
    {
      "type": "object",
      "properties": {
        "values": {
          "type": "object",
          "required": ["orgName", "splunk"],
          "properties": {
            "orgName": {
              "type": "string",
              "description": "Organization name"
            },
            "splunk": {
              "type": "object",
              "required": ["url"],
              "properties": {
                "url": {
                  "type": "string",
                  "pattern": "^https?://.*",
                  "description": "Splunk URL (must start with http:// or https://)"
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      }
    }
  ]
}
