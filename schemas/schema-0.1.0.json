{
  "title": "ProvisionRequest",
  "type": "object",
  "required": [
    "region",
    "namespace",
    "cluster",
    "applicationName",
    "values"
  ],
  "properties": {
    "region": {
      "type": "string",
      "description": "The deployment region (must match one of VALID_REGIONS)"
    },
    "namespace": {
      "type": "string",
      "description": "Kubernetes namespace"
    },
    "cluster": {
      "type": "string",
      "description": "Kubernetes cluster"
    },
    "applicationName": {
      "type": "string",
      "description": "Name of the application"
    },
    "values": {
      "type": "object",
      "required": ["orgName", "splunk"],
      "properties": {
        "orgName": {
          "type": "string",
          "description": "Organization name"
        },
        "splunk": {
          "type": "object",
          "required": ["url"],
          "properties": {
            "url": {
              "type": "string",
              "pattern": "^https?://.*",
              "description": "Splunk URL (must start with http:// or https://)"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
